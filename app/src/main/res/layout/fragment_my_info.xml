<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <Toolbar
        android:id="@+id/my_info_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_menu"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:titleTextAppearance="@style/ToolbarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left|center">

            <ImageButton
                android:id="@+id/my_info_btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/baseline_arrow_back_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Quay lại" />


        </LinearLayout>
    </Toolbar>

    <ImageView
        android:id="@+id/my_info_iv_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="@drawable/ic_homie" />

    <TextView
        android:id="@+id/my_info_tv_name_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="NAME_DISPLAY"
        android:textColor="#FFFF"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="43dp"
        android:layout_marginTop="70dp"
        android:text="THÔNG TIN TÀI KHOẢN"
        android:textColor="#FFFF"
        android:textStyle="bold" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="43dp"
        android:layout_marginTop="2dp"
        android:background="#FFFF" />

    <TextView
        android:id="@+id/my_info_tv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="#FFFF"
        android:textColorHint="#FFFF" />

    <TextView
        android:id="@+id/my_info_tv_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        android:hint="Số điện thoại"
        android:inputType="textPhonetic"
        android:padding="10dp"
        android:textColor="#FFFF"
        android:textColorHint="#FFFF" />

    <TextView
        android:id="@+id/my_info_tv_dated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        android:hint="Ngày khởi tạo"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#FFFF"
        android:textColorHint="#FFFF" />

    <Button
        android:id="@+id/my_info_btn_pwd_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_item"
        android:text="ĐỔI MẬT KHẨU" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="43dp"
        android:layout_marginTop="38dp"
        android:text="GIỚI HẠN &#38; TRẠNG THÁI"
        android:textColor="#FFFF"
        android:textStyle="bold" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="43dp"
        android:layout_marginTop="2dp"
        android:background="#FFFF" />

    <TextView
        android:id="@+id/my_info_tv_rule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        android:hint="Quyền: Admin"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#FFFF"
        android:textColorHint="#FFFF" />

    <TextView
        android:id="@+id/my_info_tv_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        android:hint="Trạng thái: ACTIVATE"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#FFFF"
        android:textColorHint="#FFFF" />

</LinearLayout>