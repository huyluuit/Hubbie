<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_item_device"
    android:gravity="top"
    android:orientation="vertical"
    android:scaleX="0.85"
    android:scaleY="0.9">

    <TextView
        android:id="@+id/tvDeviceId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="DEVICE ID" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_device" />

    <TextView
        android:id="@+id/tvTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_tv"
        android:gravity="center"
        android:padding="10dp"
        android:text="NHIỆT ĐỘ: 29°C" />

    <TextView
        android:id="@+id/tvTotalPower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border_tv"
        android:gravity="center"
        android:padding="10dp"
        android:text="CÔNG SUẤT: 300W" />

    <TextView
        android:id="@+id/tvRoomNameBelongDevice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/border_tv"
        android:gravity="center"
        android:padding="10dp"
        android:text="Vị trí: Phòng 1" />

</LinearLayout>